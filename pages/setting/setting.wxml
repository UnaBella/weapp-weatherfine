<view class="container">
  <view class="wa-list">
    <view data-city="local" class="wa-item" bindtap="onSwitch">
      {{LocalCity}}
    </view>
    <view data-city="beijing" class="wa-item" bindtap="onSwitch">
      {{Beijing}}
    </view>
    <view data-city="shanghai" class="wa-item" bindtap="onSwitch">
      {{Shanghai}}
    </view>
    <view class="space"></view>
    <view class="wa-item">
      <picker bindchange="langChange" value="{{langIndex}}" range="{{lang}}">
        <view class="picker">
          {{Language}}：{{lang[langIndex]}}
        </view>
      </picker>
    </view>
    <view class="wa-item">
      <picker bindchange="tempChange" value="{{tempIndex}}" range="{{temp}}">
        <view class="picker">
          {{TemperatureUnit}}：{{temp[tempIndex]}}
        </view>
      </picker>
    </view>
    <view class="wa-item" bindtap="navigateAbout">
      {{About}}
    </view>
  </view>
</view>